<div class="container">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="field"
  <%= f.label :login ,class:'mt-2'%><br />
  <%= f.text_field :login , class:"form-control w-25 mt-2"%>
</div>
 
  <div class="field" >
    <%= f.label :password ,class:'mt-2' %><br />
    <%= f.password_field :password, autocomplete: "current-password" , class:"form-control w-25 mt-2"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class:"form-control w-25 mt-3 btn btn-outline-dark"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>